<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.Rescue_Evaluate">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/color_background_call_rescue"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            >

            <ImageButton
                android:id="@+id/btn_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/margin_large"
                android:layout_marginTop="@dimen/margin_large"
                android:layout_marginBottom="@dimen/margin_small"
                android:background="@drawable/back" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_large"
            android:textSize="@dimen/text_size_h3"
            android:textStyle="bold"
            android:text="Đánh giá người cứu hộ" />

        <TextView
            android:id="@+id/textView20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_large"
            android:text="Vì một ứng dụng tốt đẹp hơn,\n
chúng tôi khuyên bạn nên đánh\n
giá khi hoàn thành cứu hộ" />

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="-120dp"
            android:scaleX="-1"
            app:srcCompat="@drawable/img_rescue" />

    </LinearLayout>
    <ImageButton
        android:id="@+id/imageButtonView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/circle_shape"
        android:scaleType="centerInside"
        android:src="@drawable/img_background_avt" />

    <TextView
        android:id="@+id/textView10"
        android:textSize="@dimen/text_size_h1"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dương Quang Tuyến" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:paddingHorizontal="30dp">

        <ImageButton
            android:id="@+id/img_btn_star1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_weight="1"
            android:background="#00000000"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/one_star_gray" />

        <ImageButton
            android:id="@+id/img_btn_star2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_weight="1"
            android:background="#00000000"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/one_star_gray" />

        <ImageButton
            android:id="@+id/img_btn_star3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_weight="1"
            android:background="#00000000"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/one_star_gray" />

        <ImageButton
            android:id="@+id/img_btn_star4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_weight="1"
            android:background="#00000000"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/one_star_gray" />

        <ImageButton
            android:id="@+id/img_btn_star5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_weight="1"
            android:background="#00000000"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/one_star_gray" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView23"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="75T - 1 55555 • Honda • AirBlade" />

    <EditText
        android:id="@+id/edt_vietdanhgia"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginHorizontal="@dimen/margin_large"
        android:layout_marginTop="@dimen/margin_medium"
        android:layout_marginBottom="@dimen/margin_small"
        android:background="@drawable/rounded_white_edittext"
        android:drawableLeft="@drawable/ic_edit"
        android:drawablePadding="@dimen/margin_medium"
        android:ems="10"
        android:hint="Viết đánh giá"
        android:includeFontPadding="false"
        android:inputType="text"
        android:paddingLeft="20dp"
        android:textColor="@color/gray" />

    <Button
        android:id="@+id/btn_send_evaluate"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginHorizontal="@dimen/margin_large"
        android:layout_marginTop="@dimen/margin_medium"
        android:background="@drawable/rounded_orange_button"
        android:padding="0dp"
        android:text="Gửi đánh giá"
        app:backgroundTint="@null" />

    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginHorizontal="@dimen/margin_large"
        android:layout_marginTop="@dimen/margin_medium"
        android:background="@drawable/rounded_orange_button"
        android:padding="0dp"
        android:text="Hủy bỏ"
        app:backgroundTint="#C1C1C1" />


</LinearLayout>