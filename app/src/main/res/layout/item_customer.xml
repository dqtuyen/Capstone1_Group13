<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="@dimen/margin_short"
    android:background="@drawable/rounded_white_edittext"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_user"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginHorizontal="@dimen/margin_medium"
            android:layout_marginVertical="@dimen/margin_medium"
            app:srcCompat="@drawable/avt_chatgpt" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_marginTop="@dimen/margin_small"
                    android:id="@+id/txt_name_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="Andrew Smith"
                    android:textSize="@dimen/text_size_h3"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/star_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/ic_star" />


            </LinearLayout>

            <TextView
                android:id="@+id/txt_phone_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="09123456789" />

            <TextView
                android:id="@+id/txt_time_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lúc: 11:11, 10/10/2023" />

            <TextView
                android:id="@+id/txt_evaluated"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mô tả , info.get(6) " />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/margin_medium"
                android:layout_marginBottom="@dimen/margin_small"
                app:srcCompat="@drawable/address_marker" />

            <TextView
                android:id="@+id/txt_address"
                android:layout_marginBottom="@dimen/margin_small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView" />
        </LinearLayout>

