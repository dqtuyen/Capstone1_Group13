<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Login"
    android:background="@color/white"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/img_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_large"
            android:background="@drawable/back" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thông tin của bạn"
            android:layout_marginTop="26sp"
            android:textSize="@dimen/text_size_large"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cập nhật thông tin liên lạc của bạn"
        android:layout_marginLeft="@dimen/margin_large"
        android:textSize="18sp"
        android:textStyle="bold"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edt_name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="@dimen/margin_large"
            android:layout_marginTop="@dimen/margin_medium"
            android:layout_marginBottom="@dimen/margin_small"
            android:layout_weight="0.5"
            android:background="@drawable/rounded_white_edittext"
            android:drawableLeft="@drawable/ic_edit"
            android:drawablePadding="@dimen/margin_medium"
            android:ems="10"
            android:hint="Tên của bạn"
            android:includeFontPadding="false"
            android:inputType="text"
            android:paddingLeft="20dp"
            android:textColor="@color/gray" />

        <EditText
            android:id="@+id/edt_email"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="@dimen/margin_large"
            android:layout_marginBottom="@dimen/margin_small"
            android:layout_weight="0.5"
            android:background="@drawable/rounded_white_edittext"
            android:drawableLeft="@drawable/email"
            android:drawablePadding="@dimen/margin_medium"
            android:ems="10"
            android:hint="Email"
            android:includeFontPadding="false"
            android:inputType="text"
            android:paddingLeft="20dp"
            android:textColor="@color/gray" />

        <EditText
            android:id="@+id/edt_phone"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="@dimen/margin_large"
            android:layout_marginBottom="@dimen/margin_small"
            android:layout_weight="0.5"
            android:background="@drawable/rounded_white_edittext"
            android:drawableLeft="@drawable/call"
            android:drawablePadding="@dimen/margin_medium"
            android:ems="10"
            android:hint="Số điện thoại"
            android:includeFontPadding="false"
            android:inputType="text"
            android:paddingLeft="20dp"
            android:textColor="@color/gray" />

        <EditText
            android:id="@+id/edt_numbercar"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="@dimen/margin_large"
            android:layout_marginBottom="@dimen/margin_small"
            android:layout_weight="0.5"
            android:background="@drawable/rounded_white_edittext"
            android:drawableLeft="@drawable/number_car"
            android:drawablePadding="@dimen/margin_medium"
            android:ems="10"
            android:hint="Biển số xe"
            android:includeFontPadding="false"
            android:inputType="text"
            android:paddingLeft="20dp"
            android:textColor="@color/gray" />

        <EditText
            android:id="@+id/edt_typecar"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="@dimen/margin_large"
            android:layout_marginBottom="@dimen/margin_small"
            android:layout_weight="0.5"
            android:background="@drawable/rounded_white_edittext"
            android:drawableLeft="@drawable/motorcycle"
            android:drawablePadding="@dimen/margin_medium"
            android:ems="10"
            android:hint="Hãng xe"
            android:includeFontPadding="false"
            android:inputType="text"
            android:paddingLeft="20dp"
            android:textColor="@color/gray" />



        <EditText
            android:id="@+id/edt_address"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="@dimen/margin_large"
            android:layout_marginBottom="@dimen/margin_small"
            android:layout_weight="0.5"
            android:background="@drawable/rounded_white_edittext"
            android:drawableLeft="@drawable/address_marker"
            android:drawablePadding="@dimen/margin_medium"
            android:ems="10"
            android:hint="Địa chỉ"
            android:includeFontPadding="false"
            android:inputType="text"
            android:paddingLeft="20dp"
            android:textColor="@color/gray" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_large"
            android:text="Lưu ý: Vui lòng điền chính xác thông tin cá nhân
của bạn để hệ thống có thể xác thực..."
            android:textColor="@color/gray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <Button
            android:id="@+id/btn_update"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="@dimen/margin_large"
            android:layout_marginTop="@dimen/margin_large"
            android:layout_weight="0.48"
            android:background="@drawable/rounded_orange_button"
            android:padding="0dp"
            android:text="Cập nhật"
            app:backgroundTint="@null" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:padding="0dp"
            android:text="" />

    </LinearLayout>

    <TextView
        android:id="@+id/txt_init"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:gravity="center"
        android:text="TextView"
        android:textColor="@color/greenwhite" />
</LinearLayout>