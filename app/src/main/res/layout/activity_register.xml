<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/color_background"
    android:orientation="vertical"
    tools:context=".Account.Login">

    <ImageButton
        android:id="@+id/btn_back01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_large"
        android:background="@drawable/back" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_large"
        android:text="Xin chào! \nHãy đăng ký để bắt đầu."
        android:textSize="30dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edt_name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="@dimen/margin_large"
            android:layout_marginTop="@dimen/margin_large"
            android:layout_marginBottom="@dimen/margin_medium"
            android:layout_weight="0.5"
            android:background="@drawable/rounded_white_edittext"
            android:ems="10"
            android:hint="Tên của bạn"
            android:inputType="text"
            android:paddingLeft="20dp"
            android:textColor="@color/gray" />

        <EditText
            android:id="@+id/edt_email"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="@dimen/margin_large"
            android:layout_marginBottom="@dimen/margin_medium"
            android:layout_weight="0.5"
            android:background="@drawable/rounded_white_edittext"
            android:ems="10"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:paddingLeft="20dp"
            android:textColor="@color/gray" />

        <EditText
            android:id="@+id/edt_phone"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="@dimen/margin_large"
            android:layout_marginBottom="@dimen/margin_medium"
            android:layout_weight="0.5"
            android:background="@drawable/rounded_white_edittext"
            android:ems="10"
            android:hint="Số điện thoại"
            android:inputType="textEmailAddress"
            android:paddingLeft="20dp"
            android:textColor="@color/gray" />

        <EditText
            android:id="@+id/edt_password"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="@dimen/margin_large"
            android:layout_marginBottom="@dimen/margin_medium"
            android:layout_weight="0.5"
            android:background="@drawable/rounded_white_edittext"
            android:ems="10"
            android:hint="Mật khẩu"

            android:inputType="textVisiblePassword"
            android:paddingLeft="20dp"
            android:textColor="@color/gray" />

        <EditText
            android:id="@+id/edt_confirm_password"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="@dimen/margin_large"
            android:layout_marginBottom="@dimen/margin_medium"
            android:layout_weight="0.5"
            android:background="@drawable/rounded_white_edittext"
            android:ems="10"
            android:hint="Xác nhận mật khẩu"
            android:inputType="textVisiblePassword"
            android:paddingLeft="20dp"
            android:textColor="@color/gray" />

        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="@dimen/margin_large"
            android:layout_marginTop="@dimen/margin_large"
            android:layout_weight="0.5"
            android:background="@drawable/rounded_orange_button"
            android:padding="0dp"
            android:text="Đăng kí"
            app:backgroundTint="@null" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:padding="0dp"
            android:text="" />

    </LinearLayout>

    <TextView
        android:id="@+id/txt_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:gravity="center"
        android:text="TextView"
        android:textColor="@color/greenwhite" />
</LinearLayout>