<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.HelpFriends">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/color_background_call_rescue"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            >

            <ImageButton
                android:id="@+id/btn_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/margin_large"
                android:layout_marginTop="@dimen/margin_large"
                android:layout_marginBottom="@dimen/margin_small"
                android:background="@drawable/back" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_large"
            android:textSize="@dimen/text_size_h3"
            android:textStyle="bold"
            android:text="Bạn bè phương xa" />

        <TextView
            android:id="@+id/textView20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_large"
            android:text="Hãy chọn vị và thông tin\nngười thân của bạn" />

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="-120dp"
            android:scaleX="-1"
            app:srcCompat="@drawable/img_rescue" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_history2"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginHorizontal="@dimen/margin_large"
        android:layout_marginTop="-30dp"
        android:background="@drawable/rounded_white_edittext"
        android:drawableLeft="@drawable/address_marker"
        android:drawablePadding="8dp"
        android:gravity="center_vertical"
        android:paddingStart="20dp"
        android:paddingTop="8dp"
        android:text="Vị trí"
        android:textColor="@color/gray"
        app:backgroundTint="@null"
        android:elevation="4dp"
        android:stateListAnimator="@null"
        app:iconPadding="15dp" />

    <Button
        android:id="@+id/btn_history2"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_marginHorizontal="@dimen/margin_large"
        android:background="@drawable/rounded_white_edittext"
        android:drawableLeft="@drawable/ic_edit"
        android:drawablePadding="8dp"
        android:gravity=""
        android:paddingStart="20dp"
        android:paddingTop="8dp"
        android:text="Họ và tên"
        android:textColor="@color/gray"
        app:backgroundTint="@null"
        app:iconPadding="15dp" />

    <Button
        android:id="@+id/btn_history2"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_marginHorizontal="@dimen/margin_large"
        android:background="@drawable/rounded_white_edittext"
        android:drawableLeft="@drawable/call"
        android:drawablePadding="8dp"
        android:gravity=""
        android:paddingStart="20dp"
        android:paddingTop="8dp"
        android:text="Số điện thoại"
        android:textColor="@color/gray"
        app:backgroundTint="@null"
        app:iconPadding="15dp" />

    <Button
        android:id="@+id/btn_history2"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_marginHorizontal="@dimen/margin_large"
        android:background="@drawable/rounded_white_edittext"
        android:drawableLeft="@drawable/number_car"
        android:drawablePadding="8dp"
        android:gravity=""
        android:paddingStart="20dp"
        android:paddingTop="8dp"
        android:text="Biển số xe"
        android:textColor="@color/gray"
        app:backgroundTint="@null"
        app:iconPadding="15dp" />

    <Button
        android:id="@+id/btn_login3"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginHorizontal="@dimen/margin_large"
        android:layout_marginTop="@dimen/margin_large"
        android:background="@drawable/rounded_orange_button"
        android:padding="0dp"
        android:text="Xác nhận thông tin"
        app:backgroundTint="@null" />


</LinearLayout>